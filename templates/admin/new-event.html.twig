{% extends 'admin/index.html.twig' %}

{% block tab %}
	<section class="col-10 mx-auto my-5">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Sport</th>
                <th scope="col">Type</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Nombre de places</th>
                <th scope="col">Image</th>
                <th scope="col">Vignette</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for evenement in evenements %}
                <tr>
                    <th scope="row">{{ evenement.id }}</th>
                    <td>{{ evenement.nom }}</td>
                    <td>{{ evenement.sport.nom }}</td>
                    <td>{{ evenement.type.nom}}</td>
                    <td>{{ evenement.categorie.libelle }}</td>
                    <td>{{ evenement.nombrePlaces }}</td>
                    <td>{{ evenement.image }}</td>
                    <td>{{ evenement.vignette }}</td>
                    <td><a href="">Modifier</a></td>
                    <td><a href="{{ path('delete-event', {'id': evenement.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}<th></th>
            </tbody>
        </table>
		<h1 class="mb-5">Ajouter un évènement</h1>
		<h3 class="mb-4">Informations générales</h3>
		{{ form_start(event_form) }}
		<div class="row">
			<div class="col-md-5 mb-0">
				<p class="mt-3 mb-1">Nom de l'événement<span class="text-danger">*</span></p>{{ form_widget(event_form.nom) }}
				<p class="mt-3 mb-1">Nombre de places<span class="text-danger">*</span></p>{{ form_widget(event_form.nombre_places) }}
				<p class="mt-3 mb-1">Date<span class="text-danger">*</span></p>{{ form_widget(event_form.date) }}
				<p class="mt-3 mb-1">Categorie<span class="text-danger">*</span></p>{{ form_widget(event_form.categorie) }}
				<p class="mt-3 mb-1">Sport associé<span class="text-danger">*</span></p>{{ form_widget(event_form.sport) }}
				<p class="mt-3 mb-1">Type<span class="text-danger">*</span></p>{{ form_widget(event_form.type) }}
				<p class="mt-3 mb-1">Vignette<span class="text-danger">*</span></p>{{ form_widget(event_form.vignette) }}
				<p class="mt-3 mb-1">Image<span class="text-danger">*</span></p>{{ form_widget(event_form.image) }}
			</div>
			<div class="col-md-7" class="mb-0">
				<p class="mt-3 mb-1">Description<span class="text-danger">*</span></p>{{ form_widget(event_form.description, {'attr':{'rows': '7'}})}}
				<h3 class="mb-4 mt-5">Documents associés</h3>
				<div class="col-md-5 text-center">
				</div>
			</div>
		</div>
		<div class="row mt-5">
			<div class="col-md-5 text-center">
				{{ form_widget(event_form.valider, {'attr': {'class': 'bg-success text-light col-3'}}) }}
			</div>
		</div>

		{{ form_end(event_form) }}
	</section>
	<style>
		textarea {
			resize: none;
		}
	</style>
{% endblock %}
