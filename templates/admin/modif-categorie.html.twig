{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="mb-5 text-center">Modifier une categorie d'événement</h2>
    <div class="col-sm-7 col-md-5 col-lg-3 mx-auto">
        {{ form_start(category_form) }}
			<div class="mb-5">
				<p class="mt-3 mb-1">Libelle de la catégorie<span class="text-danger">*</span></p>{{ form_widget(category_form.libelle) }}
			</div>
			<div class="text-center">
				{{ form_widget(category_form.valider, {'attr': {'class': 'bg-success text-light col-4'}}) }}
			</div>
        {{ form_end(category_form) }}
    </div>
{% endblock %}