{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="mb-5 text-center">Modifer un sport</h2>
    <div class="col-sm-7 col-md-5 col-lg-3 mx-auto">
        {{ form_start(sport_form) }}
			<div class="mb-5">
				<p class="mt-3 mb-1">Nom du sport<span class="text-danger">*</span></p>{{ form_widget(sport_form.nom) }}
			</div>
			<div class="text-center">
				{{ form_widget(sport_form.valider, {'attr': {'class': 'bg-success text-light col-4'}}) }}
			</div>
        {{ form_end(sport_form) }}
    </div>
{% endblock %}