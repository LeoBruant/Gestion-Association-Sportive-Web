{% extends 'admin/index.html.twig' %}
{% block body %}
    {# type form #}

    <div class="col-lg-6">
        <h2 class="mb-5 text-center">Ajouter un type d'événement</h2>
        {{ form_start(type_form) }}
        <div class="col-md-7 mx-auto mb-4">
            <p class="mt-3 mb-1">Nom du type d'événement<span class="text-danger">*</span></p>{{ form_widget(type_form.nom) }}
        </div>
        <div class="text-center">
            {{ form_widget(type_form.valider, {'attr': {'class': 'bg-success text-light col-2'}}) }}
        </div>
        {{ form_end(type_form) }}
    </div>
{% endblock %}