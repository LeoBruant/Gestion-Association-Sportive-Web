{% extends 'admin/index.html.twig' %}

{% block tab %}
	<div class="col-11 mx-auto">
		<div class="row">

			{# categories #}

			<div class="col-lg-6 mb-5">
				<h2 class="mb-5 text-center">Liste des catégories d'événement</h2>
				<table class="table">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="thead-left">#</th>
							<th scope="col">Libelle de la catégorie</th>
							<th scope="col"></th>
							<th scope="col" class="thead-right"></th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<th scope="row">{{ category.id }}</th>
								<td>{{ category.libelle }}</td>
								<td><a href="{{ path('modif-categorie', {'id': category.id}) }}" class="btn btn-info float-right">Modifier</a></td>
								<td><a href="{{ path('delete-categorie', {'id': category.id}) }}" class="btn btn-danger float-right">Supprimer</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			{# category form #}

			<div class="col-lg-6 mb-5">
				<h2 class="mb-5 text-center">Ajouter une categorie d'événement</h2>
				{{ form_start(category_form) }}
				<div class="col-md-7 mx-auto mb-5">
					<p class="mt-3 mb-1">Libelle de la catégorie<span class="text-danger">*</span></p>{{ form_widget(category_form.libelle) }}
				</div>
				<div class="text-center">
					{{ form_widget(category_form.valider, {'attr': {'class': 'bg-success text-light col-2'}}) }}
				</div>
				{{ form_end(category_form) }}
			</div>
		</div>
	</div>
	<style>
		/* tables */

		.thead-left{
			border-top-left-radius: 0.25rem;
		}

		.thead-right{
			border-top-right-radius: 0.25rem;
		}

		.table .thead-dark th{
			border: none;
		}
	</style>
{% endblock %}
